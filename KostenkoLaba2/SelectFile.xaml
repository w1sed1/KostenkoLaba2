<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KostenkoLaba2.Views.SelectFile"
             Title="Завантаження файлу">
    
    <VerticalStackLayout Padding="20" Spacing="15">

       
            <VerticalStackLayout>
                <Label Text="Лабораторна робота #2"
                       FontSize="24"
                       FontAttributes="Bold"
                       
                       HorizontalOptions="Center" />
                <Label Text="Цю програму розробив Костенко Михайло Романович. Група К-26, ФКНК."
                       FontSize="16"
                       
                       HorizontalOptions="Center"
                       LineBreakMode="WordWrap" />
            <Label Text="Програма зчитує xml file, виконує пошук по фільтрам через SAX, DOM, LINQ"
       FontSize="16"
       
       HorizontalOptions="Center"
       LineBreakMode="WordWrap" />
        </VerticalStackLayout>
      

        <Button Text="Додати файл" 
                Clicked="OnAddFileClicked"
                HorizontalOptions="Center"
                FontSize="16"
                Margin="10"
                Padding="10"
                WidthRequest="200"
                
                CornerRadius="25"
                />

        
    </VerticalStackLayout>
</ContentPage>
